file = {:Users/nknezek/Documents/Mendeley Library/Pozzo et al/Pozzo et al. - 2012 - Thermal and electrical conductivity of iron at Earth's core conditions.pdf:pdf},
journal = {Nature},
number = {7398},
pages = {355--358},
publisher = {Nature Publishing Group},
title = {{Thermal and electrical conductivity of iron at Earth's core conditions.}},
url = {http://adsabs.harvard.edu/cgi-bin/nph-data{\_}query?bibcode=2012Natur.485..355P{\&}link{\_}type=ABSTRACT},
