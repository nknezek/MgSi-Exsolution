publisher = {Elsevier Inc.},
title = {{Magnetism and thermal evolution of the terrestrial planets}},
url = {http://adsabs.harvard.edu/cgi-bin/nph-data{\_}query?bibcode=1983Icar...54..466S{\&}link{\_}type=ABSTRACT},
